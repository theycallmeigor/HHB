<section class="huzi-owner-section huzi-flex section-{{ section.id }}">
  <div class="huzi-col-50 huzi-content-col">
    <div class="huzi-os-warp">
      {% if section.settings.sub_title != blank %}
        <h4 class="huzi-h4 huzi-mrb15">{{ section.settings.sub_title }}</h4>
      {% endif %}
      {% if section.settings.title != blank %}
        <h3 class="huzi-h3 huzi-mrb15">{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.settings.para != blank %}
        <p class="huzi-p">{{ section.settings.para }}</p>
      {% endif %}
      {% if section.settings.img != blank %}
        <img src="{{ section.settings.img | img_url: 'master' }}" 
             alt="{{ section.settings.signature_alt | default: 'Signature' }}"
             class="huzi-signature-img"
             loading="lazy">
      {% endif %}
    </div>  
  </div>
  <div class="huzi-img-warp huzi-col-50">
    {% if section.settings.bg_img != blank %}
      <img src="{{ section.settings.bg_img | img_url: 'master' }}" 
           alt="{{ section.settings.bg_img_alt | default: section.settings.title | escape }}"
           loading="lazy">
    {% endif %}
  </div>
</section>

<style>
  /* Preserve all original CSS variables and base styles */
  .section-{{ section.id }} {
    --text: #222222;
    --bg: #ffffff;
    --primary: #fd01de;
    --secondary: #2fffff;
    --f_weight: 400;
    --f_fallback: sans-serif;
    --f_style: normal;
    --f_family: Manrope;
  }

  /* Main section container - preserving original flexbox layout */
  .huzi-owner-section {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    min-height: {{ section.settings.section_min_height | default: 500 }}px;
    background-color: {{ section.settings.section_bg_color | default: '#ffffff' }};
    padding: {{ section.settings.section_padding_top | default: 60 }}px {{ section.settings.section_padding_sides | default: 0 }}px {{ section.settings.section_padding_bottom | default: 60 }}px;
    margin: {{ section.settings.section_margin_top | default: 0 }}px 0 {{ section.settings.section_margin_bottom | default: 0 }}px;
    font-family: "interstate", var(--f_family), var(--f_fallback);
    font-style: var(--f_style);
    color: var(--text);
    font-size: 1.4rem;
    line-height: 1.86;
    -webkit-font-smoothing: antialiased;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
  }
  
  /* Preserve flexbox layout */
  .huzi-flex {
    display: flex;
    flex-wrap: wrap;
  }
  
  /* Column styling - preserved 50/50 split */
  .huzi-col-50 {
    flex: 0 0 50%;
    max-width: 50%;
    box-sizing: border-box;
    position: relative;
  }
  
  /* Content column specific styling */
  .huzi-content-col {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.content_alignment | default: 'center' }};
    padding: {{ section.settings.content_padding | default: 40 }}px;
    {% if section.settings.content_bg_color != blank %}
    background-color: {{ section.settings.content_bg_color }};
    {% endif %}
  }
  
  /* Content wrapper - preserving original structure */
  .huzi-os-warp {
    width: 100%;
    max-width: {{ section.settings.content_max_width | default: 600 }}px;
    text-align: {{ section.settings.text_alignment | default: 'left' }};
  }
  
  /* Heading 4 - subtitle styling */
  .huzi-h4 {
    font-size: {{ section.settings.subtitle_size | default: 14 }}px;
    font-weight: {{ section.settings.subtitle_weight | default: 500 }};
    color: {{ section.settings.subtitle_color | default: '#666666' }};
    text-transform: {{ section.settings.subtitle_transform | default: 'uppercase' }};
    letter-spacing: {{ section.settings.subtitle_letter_spacing | default: 1 }}px;
    line-height: 1.4;
    font-family: "interstate", var(--f_family), var(--f_fallback);
  }
  
  /* Heading 3 - main title styling */
  .huzi-h3 {
    font-size: {{ section.settings.title_size | default: 28 }}px;
    font-weight: {{ section.settings.title_weight | default: 400 }};
    color: {{ section.settings.title_color | default: '#000000' }};
    line-height: {{ section.settings.title_line_height | default: 1.3 }};
    letter-spacing: {{ section.settings.title_letter_spacing | default: 0 }}px;
    font-family: "interstate", var(--f_family), var(--f_fallback);
  }
  
  .huzi-h3 b {
    font-weight: 700;
    color: {{ section.settings.title_bold_color | default: 'inherit' }};
  }
  
  /* Paragraph styling */
  .huzi-p {
    font-size: {{ section.settings.para_size | default: 16 }}px;
    color: {{ section.settings.para_color | default: '#222222' }};
    line-height: {{ section.settings.para_line_height | default: 1.8 }};
    margin-bottom: {{ section.settings.para_margin_bottom | default: 30 }}px;
    font-family: "interstate", var(--f_family), var(--f_fallback);
  }
  
  /* Margin bottom utility class */
  .huzi-mrb15 {
    margin-bottom: 15px;
  }
  
  /* Signature image styling */
  .huzi-signature-img {
    display: inline-block;
    max-width: {{ section.settings.signature_max_width | default: 200 }}px;
    height: auto;
    margin-top: {{ section.settings.signature_margin_top | default: 20 }}px;
  }
  
  /* Image wrapper column */
  .huzi-img-warp {
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    {% if section.settings.image_bg_color != blank %}
    background-color: {{ section.settings.image_bg_color }};
    {% endif %}
  }
  
  .huzi-img-warp img {
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit | default: 'cover' }};
    display: block;
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    {% endif %}
  }
  
  /* Reverse layout option */
  {% if section.settings.reverse_layout %}
  .section-{{ section.id }} .huzi-content-col {
    order: 2;
  }
  .section-{{ section.id }} .huzi-img-warp {
    order: 1;
  }
  {% endif %}
  
  /* Tablet responsive (1024px and below) */
  @media screen and (max-width: 1024px) {
    .huzi-owner-section {
      min-height: {{ section.settings.section_min_height_tablet | default: 400 }}px;
      padding: {{ section.settings.section_padding_top | divided_by: 1.5 | default: 40 }}px {{ section.settings.section_padding_sides | divided_by: 2 | default: 0 }}px {{ section.settings.section_padding_bottom | divided_by: 1.5 | default: 40 }}px;
    }
    
    .huzi-content-col {
      padding: {{ section.settings.content_padding | divided_by: 1.5 | default: 30 }}px;
    }
    
    .huzi-h3 {
      font-size: {{ section.settings.title_size | times: 0.85 | default: 24 }}px;
    }
    
    .huzi-p {
      font-size: {{ section.settings.para_size | times: 0.9 | default: 15 }}px;
    }
  }
  
  /* Mobile responsive (768px and below) */
  @media screen and (max-width: 768px) {
    .huzi-owner-section {
      min-height: auto;
      padding: {{ section.settings.mobile_padding_top | default: 30 }}px {{ section.settings.mobile_padding_sides | default: 15 }}px {{ section.settings.mobile_padding_bottom | default: 30 }}px;
    }
    
    .huzi-col-50 {
      flex: 0 0 100%;
      max-width: 100%;
    }
    
    .huzi-content-col {
      padding: {{ section.settings.mobile_content_padding | default: 20 }}px;
      {% if section.settings.mobile_content_first %}
      order: 1;
      {% else %}
      order: 2;
      {% endif %}
    }
    
    .huzi-img-warp {
      {% if section.settings.mobile_content_first %}
      order: 2;
      {% else %}
      order: 1;
      {% endif %}
      min-height: {{ section.settings.mobile_image_height | default: 300 }}px;
      margin-bottom: {{ section.settings.mobile_image_margin_bottom | default: 20 }}px;
    }
    
    .huzi-os-warp {
      text-align: {{ section.settings.mobile_text_alignment | default: 'center' }};
      max-width: 100%;
    }
    
    .huzi-h4 {
      font-size: {{ section.settings.mobile_subtitle_size | default: 12 }}px;
    }
    
    .huzi-h3 {
      font-size: {{ section.settings.mobile_title_size | default: 22 }}px;
    }
    
    .huzi-p {
      font-size: {{ section.settings.mobile_para_size | default: 14 }}px;
      line-height: {{ section.settings.mobile_para_line_height | default: 1.6 }};
    }
    
    .huzi-signature-img {
      max-width: {{ section.settings.mobile_signature_width | default: 150 }}px;
    }
  }
</style>

