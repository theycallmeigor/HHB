      "default": "THE BIGGEST THING IN SKINCARE"
    },
    {
      "type": "html",
      "id": "Promo-code",
      "label": "Promo Code",
      "default": "THE \"GLOW UP\" HAS FINALLY<br>ARRIVED XOXO"
    },
    {
      "type": "text",
      "id": "btn-shop",
      "label": "Button",
      "default": "SHOP SKINCARE"
    },
    {
      "type": "url",
      "id": "btn-shop-link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "shop-code",
      "label": "Shop Code Text"
    },
    {
      "type": "image_picker",
      "id": "shop-icon",
      "label": "Shop Code Icon"
    },
    {
      "type": "header",
      "content": "Side Images"
    },
    {
      "type": "image_picker",
      "id": "side-left",
      "label": "Left Image (Woman with product)"
    },
    {
      "type": "image_picker",
      "id": "side-right",
      "label": "Right Image (Pink background with products)"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Add Custom Class"
    }
  ],
  "presets": [
    {
      "name": "Three Boxes Hero 2",
      "category": "05. Element"
    }
  ]
}
{% endschema %}
