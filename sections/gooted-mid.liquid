<!-- Footer Middle Section -->
<div class="footer-middle section-{{ section.id }}">
  <!-- Newsletter Section -->
  <div class="huzi-newsleter">
    {% if section.settings.newsletter_title != blank %}
      <h4>{{ section.settings.newsletter_title }}</h4>
    {% endif %}
    {% if section.settings.newsletter_description != blank %}
      <p>{{ section.settings.newsletter_description }}</p>
    {% endif %}
    
    {% if section.settings.enable_attentive_script %}
      <script>
        if(window.innerWidth >= 760){
          // Call the desktop creative
          window.__attentive.trigger(null, null, null, {{ section.settings.attentive_desktop_id }})
        } else {
          // Call the mobile creative
          window.__attentive.trigger(null, null, null, {{ section.settings.attentive_mobile_id }})
        }
      </script>
    {% endif %}
    
    <a class="btn nws-join-col-btn" 
       target="{{ section.settings.newsletter_button_target }}" 
       href="{{ section.settings.newsletter_button_link }}">
      {{ section.settings.newsletter_button_text }}
    </a>
  </div>
  
