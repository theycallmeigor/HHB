<style>
  /* Preserve all original footer middle styling */
  .section-{{ section.id }} {
    background: {{ section.settings.section_background | default: '#000000' }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_sides }}px {{ section.settings.section_padding_bottom }}px;
    font-family: inherit;
  }
  
  .section-{{ section.id }} .footer-middle {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }
  
  /* Newsletter Section - Original Styling Preserved */
  .section-{{ section.id }} .huzi-newsleter {
    text-align: center;
    max-width: {{ section.settings.newsletter_max_width }}px;
    margin: 0 auto {{ section.settings.newsletter_margin_bottom }}px;
  }
  
  .section-{{ section.id }} .huzi-newsleter h4 {
    font-size: {{ section.settings.newsletter_title_size }}px;
    font-weight: {{ section.settings.newsletter_title_weight }};
    text-transform: {{ section.settings.newsletter_title_transform }};
    letter-spacing: {{ section.settings.newsletter_title_spacing }}px;
    margin-bottom: {{ section.settings.newsletter_title_margin }}px;
    color: {{ section.settings.newsletter_title_color }};
    line-height: 1.2;
  }
  
  .section-{{ section.id }} .huzi-newsleter p {
    font-size: {{ section.settings.newsletter_text_size }}px;
    line-height: {{ section.settings.newsletter_text_line_height }};
    margin-bottom: {{ section.settings.newsletter_text_margin }}px;
    color: {{ section.settings.newsletter_text_color }};
  }
  
  .section-{{ section.id }} .nws-join-col-btn {
    display: inline-block;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }} !important;
    padding: {{ section.settings.button_padding }};
    text-decoration: none;
    text-transform: {{ section.settings.button_text_transform }};
    font-weight: {{ section.settings.button_font_weight }};
    letter-spacing: {{ section.settings.button_letter_spacing }}px;
    font-size: {{ section.settings.button_font_size }}px;
    border: {{ section.settings.button_border }};
    border-radius: {{ section.settings.button_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .section-{{ section.id }} .nws-join-col-btn:hover {
    background: {{ section.settings.button_hover_background }};
    color: {{ section.settings.button_hover_text_color }} !important;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px {{ section.settings.button_shadow_color }};
    text-decoration: none;
  }
  
  /* Social Media Section - Original Styling Preserved */
  .section-{{ section.id }} .huzi-social {
    display: flex;
    justify-content: center;
    gap: {{ section.settings.social_gap }}px;
    margin-bottom: {{ section.settings.social_margin_bottom }}px;
    flex-wrap: wrap;
  }
  
  .section-{{ section.id }} .huzi-hhb,
  .section-{{ section.id }} .huzi-hsb {
    text-align: center;
  }
  
  .section-{{ section.id }} .huzi-h-text {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.logo_text_gap }}px;
    margin-bottom: {{ section.settings.logo_margin_bottom }}px;
  }
  
  .section-{{ section.id }} .huzi-h-text img {
    width: {{ section.settings.logo_width }}px;
    height: auto;
  }
  
  .section-{{ section.id }} .huzi-hhb-text,
  .section-{{ section.id }} .huzi-hsb-text {
    font-size: {{ section.settings.social_text_size }}px;
    text-transform: {{ section.settings.social_text_transform }};
    letter-spacing: {{ section.settings.social_text_spacing }}px;
    font-weight: {{ section.settings.social_text_weight }};
    color: {{ section.settings.social_text_color }};
    line-height: {{ section.settings.social_text_line_height }};
  }
  
  .section-{{ section.id }} .huzi-social svg {
    width: {{ section.settings.social_icon_size }}px;
    height: auto;
    margin: 0 {{ section.settings.social_icon_spacing }}px;
    transition: transform 0.3s ease;
  }
  
  .section-{{ section.id }} .huzi-social a:hover svg {
    transform: translateY(-3px);
  }
  
  /* App Download Section - Original Styling Preserved */
  .section-{{ section.id }} .huzi-app_icons {
    text-align: center;
    margin: {{ section.settings.app_section_margin }}px 0;
  }
  
  .section-{{ section.id }} .huzi-app_icons h4 {
    font-size: {{ section.settings.app_title_size }}px;
    font-weight: {{ section.settings.app_title_weight }};
    text-transform: {{ section.settings.app_title_transform }};
    letter-spacing: {{ section.settings.app_title_spacing }}px;
    margin-bottom: {{ section.settings.app_title_margin }}px;
    color: {{ section.settings.app_title_color }};
  }
  
  .section-{{ section.id }} .inner_app_icons {
    display: flex;
    justify-content: center;
    gap: {{ section.settings.app_buttons_gap }}px;
    flex-wrap: wrap;
  }
  
  .section-{{ section.id }} .inner_app_icons img {
    height: {{ section.settings.app_button_height }}px;
    width: auto;
  }
  
  /* Mobile Responsive - Original Styling Preserved */
  @media screen and (max-width: 768px) {
    .section-{{ section.id }} {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_sides }}px {{ section.settings.mobile_padding_bottom }}px;
    }
    
    .section-{{ section.id }} .huzi-social {
      gap: {{ section.settings.mobile_social_gap }}px;
    }
    
    .section-{{ section.id }} .huzi-newsleter h4 {
      font-size: {{ section.settings.mobile_newsletter_title_size }}px;
    }
    
    .section-{{ section.id }} .huzi-newsleter p {
      font-size: {{ section.settings.mobile_newsletter_text_size }}px;
    }
    
    .section-{{ section.id }} .nws-join-col-btn {
      font-size: {{ section.settings.mobile_button_font_size }}px;
      padding: {{ section.settings.mobile_button_padding }};
    }
    
    .section-{{ section.id }} .huzi-h-text {
      flex-direction: {{ section.settings.mobile_logo_direction }};
    }
    
    .section-{{ section.id }} .inner_app_icons {
      flex-direction: column;
      align-items: center;
    }
  }
  
  /* Additional custom styles */
  {{ section.settings.custom_css }}
</style>

