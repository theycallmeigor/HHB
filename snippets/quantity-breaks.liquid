    <input type="hidden" name="properties[purchase_option]" value="{% if subscribe_default %}subscription{% else %}one-time{% endif %}" data-purchase-option form="{{ product_form_id }}">
    <input type="hidden" name="properties[_subscription_enabled]" value="{{ subscribe_default }}" data-subscription-enabled form="{{ product_form_id }}">
    <input type="hidden" name="properties[_cc_sub_id]" value="{% if subscribe_default %}{{ cc_sub_id }}{% endif %}" data-cc-sub-id form="{{ product_form_id }}">
    <input type="hidden" name="properties[cc_override_id]" value="{% if subscribe_default %}{{ cc_sub_id }}{% else %}{{ cc_ot_id }}{% endif %}" data-cc-override form="{{ product_form_id }}">
    <input type="hidden" name="properties[_subscription_discount]" value="{{ subscription_discount }}" data-subscription-discount form="{{ product_form_id }}">
  </div>

  <style>
    /* Purchase option toggle buttons */
    .qb-purchase-options {
      display: flex;
      gap: 8px;
      align-items: stretch;
      margin: 8px 0 12px;
      flex-wrap: wrap;
    }
    .qb-purchase-option {
      appearance: none;
      border: 1.5px solid rgba(0,0,0,0.15);
      background: rgba(0,0,0,0.03);
      color: inherit;
      border-radius: 999px;
      padding: 10px 14px;
      line-height: 1.1;
      display: inline-flex;
