       data-cc-ot-id="{{ cc_ot_id | escape }}"
       data-selling-plan-id="{{ selling_plan_id | escape }}"
       data-default-selling-plan="{{ default_selling_plan_id | escape }}"
       data-section-id="{{ section.id }}">
    
