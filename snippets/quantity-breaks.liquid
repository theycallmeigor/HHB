      background: #fff;
      border-color: var(--text-accent-color, rgba(109,56,139,0.6));
      box-shadow: 0 0 0 3px rgba(109,56,139,0.12);
    }
    
    /* Subscription details box */
    .qb-subscribe-details {
      padding: 1rem;
      border-radius: var(--border-radius);
      background: rgba(var(--color-foreground),.03);
      margin-bottom: 1rem;
    }
    .qb-subscribe-details__label {
      margin-right: .5rem;
      font-weight: 600;
    }
    .qb-subscribe-details__select {
      min-width: 9rem;
    }
    
    /* Dark mode support */
    @media (prefers-color-scheme: dark) {
      .qb-purchase-option {
        border-color: rgba(255,255,255,0.2);
        background: rgba(255,255,255,0.06);
      }
      .qb-purchase-option.is-active {
        background: rgba(255,255,255,0.1);
        border-color: rgba(255,255,255,0.4);
        box-shadow: 0 0 0 3px rgba(255,255,255,0.12);
      }
    }
    
    /* Mobile responsive */
    @media (max-width: 749px) {
      .qb-purchase-options {
        flex-direction: column;
      }
      .qb-purchase-option__title,
      .qb-purchase-option__subtitle {
        white-space: normal;
      }
    }
  </style>
{%- endif -%}

{%- comment -%} Subscription price update and form logic {%- endcomment -%}
<script>
(function() {
  const purchaseTypeWrap = document.querySelector('.qb-purchase-type[data-section-id="{{ section.id }}"]');
  if (!purchaseTypeWrap) return;

  const root = document.getElementById('quantity-breaks-{{ section.id }}');
  const moneyFormat = '{{ shop.money_format | escape }}';
  const basePrice = {{ base_price }};
  const subDiscount = Number(purchaseTypeWrap.dataset.subsDiscount || {{ subscription_discount }});
  const sellingPlanId = purchaseTypeWrap.dataset.sellingPlanId || '';
  const ccSubId = purchaseTypeWrap.dataset.ccSubId || '';
  const ccOtId = purchaseTypeWrap.dataset.ccOtId || '';
  
  // Get all form inputs
  const sellingPlanInput = purchaseTypeWrap.querySelector('[data-selling-plan-input]');
  const purchaseOptionInput = purchaseTypeWrap.querySelector('[data-purchase-option]');
  const propEnabledInput = purchaseTypeWrap.querySelector('[data-subscription-enabled]');
  const ccSubIdInput = purchaseTypeWrap.querySelector('[data-cc-sub-id]');
  const ccOverrideInput = purchaseTypeWrap.querySelector('[data-cc-override]');
  const freqSelect = purchaseTypeWrap.querySelector('#subscription-frequency-{{ section.id }}');
  const detailsBox = purchaseTypeWrap.querySelector('.qb-subscribe-details');
  
  // Get toggle buttons
  const oneTimeBtn = purchaseTypeWrap.querySelector('.qb-purchase-option--onetime');
  const subBtn = purchaseTypeWrap.querySelector('.qb-purchase-option--subscription');

  function formatMoney(cents) {
    try { 
      if (window.Shopify && typeof Shopify.formatMoney === 'function') {
        return Shopify.formatMoney(cents, moneyFormat);
      }
    } catch(e) {}
    const amount = (cents / 100).toFixed(2);
    return moneyFormat.replace(/\{\{amount\}\}/g, amount).replace(/\{\{amount_no_decimals\}\}/g, Math.floor(cents / 100));
  }

  // Update prices in quantity break cards
  function refreshAllPrices(isSub) {
    if (!root) return;
    
    root.querySelectorAll('.quantity-break').forEach(bar => {
      const qty = Number(bar.dataset.quantity || 1);
      const percLeft = Number(bar.dataset.percentageLeft || 1);
      const fixedDiscount = Number(bar.dataset.fixedDiscount || 0);
      const compareMode = bar.dataset.compareMode || 'compare_price';
      const baseCompare = Number(bar.dataset.baseComparePrice || basePrice);

      let original = Math.max(0, Math.round((basePrice * qty * percLeft) - fixedDiscount));
      const compareTotal = Math.round(((compareMode === 'compare_price' ? baseCompare : basePrice) * qty));
      const newTotal = isSub ? Math.round(original * (1 - subDiscount/100)) : original;
      const newEach = qty > 0 ? Math.round(newTotal / qty) : newTotal;
      const saved = Math.max(0, (compareTotal > 0 ? compareTotal : original) - newTotal);

      // Update price displays
      bar.querySelectorAll('.variant-price-update[data-text]').forEach(el => {
        const tpl = el.dataset.text;
        el.innerHTML = tpl
          .replace(/\[price_each\]/g, formatMoney(newEach))
          .replace(/\[price\]/g, formatMoney(newTotal))
          .replace(/\[compare_price\]/g, formatMoney(compareTotal))
          .replace(/\[amount_saved\]/g, formatMoney(saved))
          .replace(/\[amount_saved_rounded\]/g, formatMoney(Math.round(saved / 100) * 100));
      });

      // Toggle compare price visibility
      const cmp = bar.querySelector('.quantity-break__compare-price');
      if (cmp) {
        cmp.classList.toggle('hidden', compareTotal <= newTotal);
      }
    });
  }

  function setActiveButton(which) {
    const isSubscription = which === 'subscription';
    
    if (oneTimeBtn) {
      oneTimeBtn.classList.toggle('is-active', !isSubscription);
      oneTimeBtn.setAttribute('aria-pressed', !isSubscription ? 'true' : 'false');
    }
    if (subBtn) {
      subBtn.classList.toggle('is-active', isSubscription);
      subBtn.setAttribute('aria-pressed', isSubscription ? 'true' : 'false');
    }
  }

  function applyPurchaseMode(mode) {
    const isSub = mode === 'subscription';
    
    // Update UI
    setActiveButton(mode);
    if (detailsBox) detailsBox.style.display = isSub ? 'block' : 'none';
    
    // Update hidden inputs
    if (purchaseOptionInput) purchaseOptionInput.value = mode;
    if (propEnabledInput) propEnabledInput.value = String(isSub);
    if (sellingPlanInput) sellingPlanInput.value = isSub ? sellingPlanId : '';
    if (ccSubIdInput) ccSubIdInput.value = isSub ? ccSubId : '';
    if (ccOverrideInput) ccOverrideInput.value = isSub ? ccSubId : ccOtId;
    
    // Update prices
    refreshAllPrices(isSub);

    // CheckoutChamp integration
    const cc = window.CC || window.CheckoutChamp;
    if (cc && typeof cc.setSubscription === 'function') {
      try {
        cc.setSubscription({
          enabled: isSub,
          id: isSub ? ccSubId : null,
          frequency: Number(freqSelect?.value || 30),
          discount: subDiscount
        });
      } catch(e) {}
    }
  }

  // Event listeners
  if (oneTimeBtn) {
    oneTimeBtn.addEventListener('click', () => applyPurchaseMode('one-time'));
  }
  if (subBtn) {
    subBtn.addEventListener('click', () => applyPurchaseMode('subscription'));
  }
  if (freqSelect) {
    freqSelect.addEventListener('change', () => {
      const currentMode = subBtn?.classList.contains('is-active') ? 'subscription' : 'one-time';
      if (currentMode === 'subscription') {
        applyPurchaseMode('subscription');
      }
    });
  }

  // Listen for quantity changes
  if (root) {
    root.addEventListener('change', (e) => {
      if (e.target?.name === 'quantity') {
        const currentMode = subBtn?.classList.contains('is-active') ? 'subscription' : 'one-time';
        refreshAllPrices(currentMode === 'subscription');
      }
    });
  }

  // Initialize
  const initialMode = {{ subscribe_default }} ? 'subscription' : 'one-time';
  applyPurchaseMode(initialMode);
})();
</script>

